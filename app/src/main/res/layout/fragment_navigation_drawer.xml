<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidyu.her.Fragments.NavigationDrawerFragment"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true"
    android:layout_marginTop="0dp">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/banner_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/banner_image"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <ListView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/ND_list1"
        android:layout_below="@+id/banner_image"
        android:layout_alignRight="@+id/banner_image"
        android:layout_alignEnd="@+id/banner_image" />

    <ListView
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/ND_list2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ND_list1"
        />

</RelativeLayout>
